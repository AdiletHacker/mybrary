<h2>Search Books</h2>
<form action="/books">
    <div>
        <label for="title">Name</label>
        <input type="text" name="title" value="<%= searchOptions.name %>" id="title">
    </div>

    <div>
        <label for="publishedAfter">Published After</label>
        <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>" id="publishedAfter">
    </div>

    <div>
        <label for="publishedBefore">Published Before</label>
        <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>" id="publishedBefore">
    </div>

    <button type="submit">Search</button>
</form>

<br>

<div>
    <% books.forEach(book => { %>
        <img src="<%= book.coverImagePath %>" alt="oops..." width="100" height="150">
        <div><%= book.title %></div>
    <% }) %>
</div>